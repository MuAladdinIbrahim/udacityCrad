<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.android.udacitycrad.MainActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:scaleType="centerCrop"
            android:src="@drawable/uda"
            android:paddingBottom="8dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Learn, Think, Do. "
            android:textSize="40sp"
            android:fontFamily="casual"
            android:textColor="#3498db"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="30dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/location"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2465 Latham St.
                               Mountain View, CA 94043"
                android:singleLine="false"
                android:lines="2"
                android:textSize="20sp"
                android:fontFamily="monospace"
                android:textColor="#2c3e50"
                android:layout_marginLeft="20dp"
                android:lineSpacingMultiplier="1.2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp"
            android:layout_marginLeft="30dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/phone2"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="650-555-5555"
                android:textSize="20sp"
                android:fontFamily="monospace"
                android:textColor="#2c3e50"
                android:layout_marginLeft="20dp"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="www.udacity.com"
            android:textSize="30sp"
            android:layout_gravity="center"
            android:fontFamily="serif-monospace"
            android:autoLink="all"
            android:linksClickable="true"
            android:layout_marginBottom="40dp"/>

    </LinearLayout>

</ScrollView>
